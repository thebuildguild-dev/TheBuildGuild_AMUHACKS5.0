# ExamIntel - Environment Variables
# Copy to .env: cp .env.example .env

# APPLICATION SETTINGS
NODE_ENV=development

# SERVICE PORTS (Public Access)
BACKEND_PORT=8000

# DATABASE (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=examintel_db
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/examintel_db

# INTERNAL SERVICE URLS
RAG_URL=http://rag:8001

# CORS SETTINGS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# FIREBASE AUTHENTICATION
# Paste your entire Firebase service account JSON string below
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_JSON=<paste-your-entire-firebase-json-here>

# AI FEATURES (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_GENERATION_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# VECTOR DATABASE (Qdrant)
VECTOR_SIZE=3072
COLLECTION_NAME=examintel_pyq

# REDIS CACHE
REDIS_PASSWORD=
REDIS_ENABLED=true
CACHE_TTL=3600

# INTERNAL CONFIGURATION (Do not modify)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=
REDIS_HOST=redis
REDIS_PORT=6379
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
RAG_PORT=8001
