# ================================
# Backend Configuration
# ================================
BACKEND_PORT=8000
BACKEND_URL=http://backend:8000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/examintel_db

# Firebase Authentication
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_JSON=<paste-your-entire-firebase-json-here>

# ================================
# RAG Service Configuration
# ================================
RAG_PORT=8001
RAG_URL=http://rag:8001

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# PYQ Data Directory
PYQ_BASE_PATH=/data/pyq

# Qdrant Dump/Restore
QDRANT_DUMP_PATH=./qdrant_dump

# ================================
# PostgreSQL Configuration
# ================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=examintel_db

# ================================
# Qdrant Vector Database
# ================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=  # Leave empty for development (no auth). Set for production: QDRANT_API_KEY=your-secret-key

# ================================
# Redis Cache (Optional)
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
