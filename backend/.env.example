# ================================
# Backend Service (Local Development)
# ================================
# Use this .env.example when running backend locally (npm run dev)
# For Docker Compose, use root .env.example instead

# Server Configuration
PORT=8000
NODE_ENV=development

# Database (localhost for local dev)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/amu_recovery

# Firebase Authentication
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_JSON=<paste-your-entire-firebase-json-here>

# RAG Service (localhost for local dev)
RAG_URL=http://localhost:8001
